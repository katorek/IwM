<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="550.0" maxWidth="550.0" minHeight="550.0" minWidth="550.0" prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tomograph.Controller">
   <bottom>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <ProgressBar fx:id="progressBar" prefWidth="534.0" progress="0.0">
               <padding>
                  <Insets bottom="15.0" left="8.0" right="9.0" top="8.0" />
               </padding>
            </ProgressBar>
            <Slider fx:id="slider" prefWidth="530.0">
               <padding>
                  <Insets bottom="15.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Slider>
         </children>
      </StackPane>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="oryginalImage" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ImageView>
            <ImageView fx:id="outputImage" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
         </padding>
      </HBox>
   </center>
   <top>
      <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="imagePickButton" mnemonicParsing="false" onAction="#chooseImage" text="Wybierz plik" />
                  <Button fx:id="analyzeButton" disable="true" mnemonicParsing="false" onAction="#analyze" text="Przetwórz obraz" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Krok Δα układu emiter/dekoder, zakres (0, 180]" />
                  <TextField fx:id="angleAlfaTextField" promptText="Kąt α" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="n - liczba rzutów emiterów/dekoderów" />
                  <TextField fx:id="countEmitersTextField" promptText="Ilość emiterów/detektorów" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="l - rozpiętość układu emiter/dekoder, zakres: (0 ; 180]" />
                  <TextField fx:id="angleLtextField" promptText="kąt l" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="i - liczba iteracji" />
                  <TextField fx:id="iterationsTextField" promptText="Liczba iteracji" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
